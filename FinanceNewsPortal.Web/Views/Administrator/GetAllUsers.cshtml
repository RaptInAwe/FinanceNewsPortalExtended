@model List<ApplicationUser>

@{
    ViewData["Title"] = "All Users";
}

<table class="table rounded-3">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Account Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <td>@(user.Status ? "Activated" : "Disabled") </td>
                <td>
                    <a asp-controller="Administrator" asp-action="Details" asp-route-userId="@user.Id" class="btn btn-primary">View</a>
                    @if (@user.Status)
                    {
                        <a asp-controller="Administrator" asp-action="ToggleAccountStatus" asp-route-userId="@user.Id" class="btn btn-danger">Disable</a>
                    }
                    else
                    {
                        <a asp-controller="Administrator" asp-action="ToggleAccountStatus" asp-route-userId="@user.Id" class="btn btn-success">Enable</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>