@model NewsArticle

@{
    ViewData["Title"] = "Delete News";
}

<section>
    <form asp-controller="NewsArticles" asp-action="Delete" class="alert alert-danger">
        <h4>Are you sure you want to delete this news article?</h4>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="GetAllCreated" class="btn btn-primary">Back to your News Articles</a>
    </form>
    <div class="my-4">
        <h1>@Model.Title</h1>
        <p>By @($"{Model.Author.FirstName} {Model.Author.LastName}")</p>
        <p>Created at @Model.CreatedAt</p>
        <hr />
        <div class="container my-4">
            @Html.Raw(Model.Description)
        </div>
    </div>
</section>