@model UserWithRoleViewModel

@{
    ViewData["Title"] = "Profile";
}

<section class="container d-flex justify-content-center">
    <div class="card" style="width: 24rem;">
        <div class="d-flex flex-column align-items-center justify-content-center my-4">
            <img src='~/@(Model.ImageFilePath != null ? $"uploads/profile-image/{Model.ImageFilePath}" : "img/user.png")'
                class="card-img-top img-fluid" style="width: 10rem; height: 10rem;" alt="">
            <span class="mt-4 badge bg-secondary">@Html.DisplayFor(model => model.Role)</span>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <i class="fas fa-user-circle"></i>
                @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
            </li>
            <li class="list-group-item">
                <i class="fas fa-at"></i>
                @Html.DisplayFor(model => model.Email)
            </li>
            <li class="list-group-item">
                <i class="fas fa-venus-mars"></i>
                @(Model.Gender == 'M' ? "Male" : "Female")
            </li>
            <li class="list-group-item">
                <i class="fas fa-user-cog"></i>
                <a class="btn btn-primary" asp-controller="Auth" asp-action="EditUserInfo">Update Info</a>
                <a class="btn btn-primary" asp-controller="Auth" asp-action="EditPassword">Update Password</a>
            </li>
        </ul>
    </div>
</section>