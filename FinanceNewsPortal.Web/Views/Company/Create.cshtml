@model UpsertCompanyViewModel

@{
    ViewData["Title"] = "Create Company";
}

<section class="form-section">
    <form asp-controller="Company" asp-action="Create">
        <h1 class="h3 mb-3 fw-normal">Create Company</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="Name">
            <label asp-for="Name" class="form-label">Name</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="Address">
            <label asp-for="Address" class="form-label">Address</label>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="FoundedAt">
            <label asp-for="FoundedAt" class="form-label">Founded Date</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Create</button>
    </form>
</section>